<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ProgressBar
        android:id="@+id/create_event_progress_bar"
        android:layout_width="@dimen/layout_height_small"
        android:layout_height="@dimen/layout_height_small"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/parameters_list_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_button"
        android:layout_below="@+id/create_event_progress_bar" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/push_preview_text_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/layout_height_small"
        android:layout_marginRight="@dimen/layout_height_small"
        android:layout_toLeftOf="@+id/clear_received_data"
        android:layout_toStartOf="@+id/clear_received_data"
        android:background="@color/color_accent"
        android:text="@string/send_button_text"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/clear_received_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/parameters_list_recycle_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/layout_height_small"
        android:layout_marginRight="@dimen/layout_height_small"
        android:background="@color/color_accent"
        android:text="@string/clear_received_data_text"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/push_preview_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:isScrollContainer="false" />

</RelativeLayout>
